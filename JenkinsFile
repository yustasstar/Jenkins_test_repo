pipeline {
    agent any
    
    triggers {
        githubPush()
    }

    tools {
        nodejs "My_NodeJS_Jenkins"
    }    
    
    stages {        
        stage('Run Newman Tests') {
            steps {
                '''
                node -v
                newman -v
                newman run "testData/HW 20.1 Jenkins.postman_collection.json" -d "testData/testJsonData.json" -r "cli,junit,htmlextra" --reporter-junit-export "newman_results/JUnit_TestReport" --reporter-htmlextra-export "newman_results/HTML_TestReport.html"
                '''
            }
        }
    }
    
    post {
        always {
            // Palishing of JUnit report
            junit 'newman_results/JUnit_TestReport'
            
            // Archiving an HTML report as an artifact
            archiveArtifacts artifacts: 'newman_results/HTML_TestReport.html', fingerprint: true
            
            // Publishing an HTML report (optional)
            publishHTML([
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: '.',
                reportFiles: 'htmlextra-report.html',
                reportName: 'Newman HTML Report'
            ])
        }
        
        success {
            echo 'All tests have been successfully passed!'
        }
        
        failure {
            echo 'Tests failed with errors. Check the reports for details.'
        }
    }
}
